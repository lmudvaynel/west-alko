<div class="page-content">
  <div class="row clearfix mb">
    <div class="filterable">
      <ul class="filter">
        <%  
          make = nil
          if params[:make] and params[:make]=="own"
            make = "own"
          elsif params[:make]
            make = "foreign"
          end
        %>
        <% alco_type_list.each do |key,value| %>
          <li>
            <a href="<%= url_for_type("alco",key.to_s,make) %>"> <%= value %> </a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

<div class="row clearfix mbs">
  <div class="grid_12">

  <ul class="portfolio clearfix">
    <% @products.each do |product| %>
      <% volume = Refinery::Volumes::Volume.find(:first, :conditions => ['product_id = ?', product.id]) %>
      <li class="grid_3 grid_3_1" data-type="digital">
        <div class="hover-fx">   
          <% if volume != nil and volume.pic != nil %>
            <img src="<%= volume.pic.thumbnail("300x300").url %>" alt="#">
          <% end %>

          <% if volume != nil and volume.product != nil %>
            <a class="fRight" href="<%= url_for_product(volume.product) %>"><span style="padding: 12px 0 0 12px;"><i class="icon-eye-open"></i></span></a>
          <% end %>
          
        </div>
        <div class="detailes">
          <h5> <a href="<%= url_for_product(volume.product) %>"><%= product.name %></a> </h5>
          <a href="<%= url_for_type("alco",product.alco_type.to_s,make) %>"><%= alco_type_list[:"#{product.alco_type}"] %></a>
        </div>
      <div>
      </li>
    <% end %>
  </ul>

  </div>
</div>
<div id="toTop"><i class="icon-angle-up"></i></div><!-- Back to top -->
<!-- Scripts -->