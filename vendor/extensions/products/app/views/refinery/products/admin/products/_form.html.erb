<%= form_for [refinery, :products_admin, @product] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @product,
              :include_object_name => true %>

  <%= render '/refinery/admin/locale_picker',
              :current_locale => Globalize.locale %>
  

  <div class='field'>
    make 
    <% if @product !=nil %>
      <%= f.select :make_type, options_for_select([[make_type_list[:own],"own"],[make_type_list[:foreign],"foreign"]],@product.make_type) %>
    <% else %>
      <%= f.select :make_type, options_for_select([[make_type_list[:own],"own"],[make_type_list[:foreign],"foreign"]])%>
    <% end %>
  </div>


  <div class='field'>
    alco
    <% if @product !=nil %>
      <%= f.select :alco_type, 
      options_for_select([[alco_type_list[:wine],"wine"],
                          [alco_type_list[:cognac],"cognac"],
                          [alco_type_list[:champagne],"champagne"]],
                          @product.alco_type) %>
    <% else %>
      <%=f.select :alco_type, options_for_select([[alco_type_list[:wine],"wine"],
                          [alco_type_list[:cognac],"cognac"],
                          [alco_type_list[:champagne],"champagne"]]) %>
    <% end %>
  </div>


  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description, :description_short],
                :object => "products/product" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.products.admin.products.product'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @product.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
