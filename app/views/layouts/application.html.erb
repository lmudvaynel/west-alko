<!DOCTYPE html>
<%= render "/refinery/html_tag" %>
  <% site_bar = render('/refinery/site_bar', :head => true) -%>
  <head>
    <%= render "/refinery/head" %>
  </head>
   <% session[:last_seen] = Time.now %>
  <% if ((session[:remember]!='1') and (session[:last_seen] < 30.minutes.ago)) %>
    <% session[:west_alko]=nil %>
  <% end %>
  <body>
    <% if session[:west_alko] == nil %>
      <% @day=params[:day].to_s  %>
      <% @year=params[:year].to_s  %>
      <% @month=params[:month].to_s  %>
      <% session[:remember]=params[:remember] %>
      <% begin %>
        <%if (age_in_completed_years((@day+'/'+@month+'/'+@year).to_date, Date.current()))>17 %>
          <% session[:west_alko] = '1' %>
        <% else %>
          <% @e='error' %>
        <% end %>
        <% rescue Exception => @e %>
        <% end %>
    <% end %>
  <body>
</div>
    <div id="layout" class="full"<%= @page.slug!="home" ? "style=background-color:white;" : "" %>>
      <div id="page_container">
        <header id="header" class="header_v4">
          <%= render "/refinery/header" -%>
        </header>
          <%= yield %>
      </div>
    </div>
